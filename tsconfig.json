{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["es2019", "ES6", "es2020", "es2021", "DOM"],
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "resolveJsonModule": true
  }
}
